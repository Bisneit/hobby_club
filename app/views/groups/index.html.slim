- @groups.each do |group|
	.group-list
		.group-item
			.info
				.title
					.group-ttitle
						.ttitle-row
							.ttitle-cell
								= link_to group.name, group_path(group.id)
				.content
					.m10 &nbsp;
					dt Описание
					dl.inform-block
						= Rinku.auto_link(group.description, :all, 'target="_blank"').html_safe
			.avatar
				= image_tag(group.avatar.url(:medium))
